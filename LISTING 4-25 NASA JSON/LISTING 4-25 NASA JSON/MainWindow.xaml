<Window x:Class="NASAAstronomyPictureOfTheDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NASAAstronomyPictureOfTheDay"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>        
            <Image Name="NASAImage" Stretch="UniformToFill" Width="800" Height="600"></Image>
            <ScrollViewer Height="100" Width="800" 
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto">
                <TextBlock Name="DescriptionTextBlock" Width="800" Text="" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"></TextBlock>
            </ScrollViewer>
            <Button Name="LoadButton" Content="Load image" Click="LoadButtonClicked"></Button>
        </StackPanel>

    </Grid>
</Window>
