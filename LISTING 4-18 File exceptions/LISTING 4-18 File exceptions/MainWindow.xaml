<Window x:Class="FileWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWriter"
        mc:Ignorable="d"
        Title="MainWindow"  SizeToContent="WidthAndHeight" >
    <Grid>
        <StackPanel>
            <TextBlock Text="File Exceptions" Margin="5" HorizontalAlignment="Center" ></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Content="Void Write Method" Click="StartVoidButton_Click" Margin="5" HorizontalAlignment="Center"></Button>
            <Button Content="Task Write Method" Click="StartTaskButton_Click" Margin="5" HorizontalAlignment="Center"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
